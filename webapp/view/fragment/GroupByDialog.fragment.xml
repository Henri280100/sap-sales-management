<!-- webapp/view/fragment/GroupByDialog.fragment.xml -->
<core:FragmentDefinition
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Dialog
    id="idGroupByDialog"
    class="sapUiContentPadding"
    title="Group by"
    contentWidth="22rem">

    <content>
      <RadioButtonGroup id="idGroupByRadioButtonGroup" columns="1" select=".onRadioButtonGroupSelect">
        <buttons>
          <RadioButton text="Delivery Status">
            <customData>
              <core:CustomData key="key" value="delivery"/>
            </customData>
          </RadioButton>

          <RadioButton text="Billing Status">
            <customData>
              <core:CustomData key="key" value="billing"/>
            </customData>
          </RadioButton>

          <RadioButton text="Sales Order ID">
            <customData>
              <core:CustomData key="key" value="salesorder"/>
            </customData>
          </RadioButton>

          <RadioButton text="Customer Name">
            <customData>
              <core:CustomData key="key" value="customer"/>
            </customData>
          </RadioButton>

          <RadioButton text="None">
            <customData>
              <core:CustomData key="key" value="none"/>
            </customData>
          </RadioButton>
        </buttons>
      </RadioButtonGroup>
    </content>

    <beginButton>
      <Button text="OK" type="Emphasized" press=".onOKButtonPress"/>
    </beginButton>
    <endButton>
      <Button text="Cancel" press=".onCancelButtonPress"/>
    </endButton>
  </Dialog>

</core:FragmentDefinition>
